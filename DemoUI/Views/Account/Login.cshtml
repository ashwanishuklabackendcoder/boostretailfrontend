@model DemoUI.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Boost Retail</title> 

    <!-- ✅ Include Bootstrap (standalone) -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 400px; border-radius: 16px;">
            <h3 class="text-center mb-4 text-dark fw-bold">Login</h3>

            <form asp-action="Login" method="post" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label text-secondary"></label>
                    <input asp-for="Username" class="form-control border-secondary" placeholder="Enter username or email" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label text-secondary"></label>
                    <input asp-for="Password" type="password" class="form-control border-secondary" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3 rounded-pill">Login</button>

                <p class="text-center mb-0">
                    <a href="#" class="text-decoration-none text-primary fw-semibold">Forgot Password?</a>
                </p>
            </form>
        </div>
    </div>

    <!-- ✅ Validation + Bootstrap JS -->
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
